@page
@model MileageApp.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="FirstName" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Travel Date (From) : </label>
        <div class="col-sm-3">
            <input type="date" asp-format="{0:MM-dd-yyyy}" name="fromdate" id="fromdate" placeholder="From Date" class="form-control">
        </div>

    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Travel Date (To) : </label>
        <div class="col-sm-3">
            <input type="date" asp-format="{0:MM-dd-yyyy}" name="todate" id="todate" placeholder="To Date" class="form-control">
        </div>
        <input type="submit" class="col-sm-1 btn btn-primary" id="btndatesearch" value="Filter" />
        <div class="col-sm-6">
            <label class=" col-sm-3 col-form-label"> Total Miles: </label>

            <label class=" col-sm-3 col-form-label"> @Model.totalmiles </label>

        </div>
        </div>


       
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].TravelDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].StartToEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Miles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employee)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TravelDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartToEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Miles)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
